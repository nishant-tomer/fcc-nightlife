-var uri = process.env.APP_URI
-var polls = uri + "#polls"

doctype html
html
    head
        title Voting app
        include ../cdn.jade
        script(src= '/js/loadUserPolls.js')
        script(src='/js/createPoll.js')
        
    body(style='font-family:Fauna One;')
    .navbar.navbar-default.navbar-fixed-top(role='navigation', style="margin-right: 0 !important;")
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                .btn-group(role="group")
                    a.btn(href="#{uri}") 
                        button.btn.btn-success
                            span  All Polls
                    
                  
            .navbar-collapse.collapse.navbar-right(style="margin-top:5px;")   
                .btn-group(role="group")
                    a.btn(href = "#{uri}/profile")
                        button.btn.btn-primary Profile
                    a.btn(href='#{uri}/logout') 
                        button.btn.btn-primary Log Out

            
